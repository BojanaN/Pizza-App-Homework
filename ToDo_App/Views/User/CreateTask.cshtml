@model  ToDo_App.Models.DomainModels.Task;

@{
    ViewBag.Title = "Create Task";
}

@using (Html.BeginForm())
{
    <h3>Create New Task :</h3> <br/>
    @Html.LabelFor(x => x.Title)
    @Html.TextBoxFor(x => x.Title) <br/>
    @Html.LabelFor(x => x.Description)
    @Html.TextAreaFor(x => x.Description) <br/>
    @Html.LabelFor(x => x.Importance)
    @Html.DropDownListFor(x => x.Importance, new SelectList(Enum.GetValues(typeof(Importance)))) <br/>
    @Html.LabelFor(x => x.Status)
    @Html.DropDownListFor(x => x.Status, new SelectList(Enum.GetValues(typeof(Status)))) <br/>
    @Html.LabelFor(x => x.Type)
    @Html.DropDownListFor(x => x.Type, new SelectList(Enum.GetValues(typeof(ToDo_App.Models.DomainModels.Type)))) <br/>
    <button type="submit">Add Task</button>

}


